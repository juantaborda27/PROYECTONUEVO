<UserControl x:Class="Presentacion.vistaProducto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="850">
    <Grid>
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <StackPanel Width="248">
                <Label Content="Producto" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                <Label Content="        Código" Width="261"/>
                <TextBox TextWrapping="Wrap" Text="" Width="203" Margin="0,10,0,0"/>
                <Label Content="        Nombre:" Margin="0,20,0,0" Width="264"/>
                <TextBox TextWrapping="Wrap" Text="" Width="203" Margin="0,10,0,0" Height="23"/>
                <Label Content="        Descripción:" Margin="0,20,0,0" Width="258"/>
                <TextBox TextWrapping="Wrap" Text="" Width="203" Margin="0,10,0,0"/>
                <StackPanel Width="289">
                    <Label Content="        Categoría" Margin="0,20,0,0" Width="258"/>
                </StackPanel>
                <ComboBox Width="203" Margin="0,10,0,0" Height="18"/>
                <Button Content="Guardar" Margin="0,20,0,0" Width="200" Height="28"/>
                <Button Content="Limpiar" Margin="0,20,0,0" Width="204" Height="28"/>
                <Button Content="Eliminar" Click="Button_Click" Margin="0,20,0,0" Width="206" Height="28"/>
            </StackPanel>
            <StackPanel Width="595">
                <Label Content="Productos" Margin="0,30,0,0" HorizontalAlignment="Center"/>
                <StackPanel Height="40" Orientation="Horizontal">
                    <Label Content="Buscar:" Margin="20,0,0,0" Height="34"/>
                    <TextBox TextWrapping="Wrap" Width="120" Margin="10,0,0,0" Height="25"/>
                    <Button Content="Button" Click="Button_Click" Margin="5,0,0,0" Height="30"/>
                </StackPanel>
                <DataGrid AutoGenerateColumns="False" Width="582" Height="393">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Codigo" Width="80" />
                        <DataGridTextColumn Header="Nombre" Width="80"  />
                        <DataGridTextColumn Header="Descripción" Width="80"  />
                        <DataGridTextColumn Header="Categoría" Width="80" />
                        <DataGridTextColumn Header="Disponibles" Width="80"/>
                        <DataGridTextColumn Header="Precio Compra" Width="100"/>
                        <DataGridTextColumn Header="Precio Venta"  />
                    </DataGrid.Columns> Width="100
"
                </DataGrid>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>