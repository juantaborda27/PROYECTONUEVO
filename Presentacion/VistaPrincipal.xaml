<Window x:Class="Presentacion.VistaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="VistaPrincipal" Height="450" Width="800"
        WindowStyle = "None"
        ResizeMode = "NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    <Border CornerRadius="60">
        <Border.Background>
            <ImageBrush ImageSource="/Imagenes/toool.png"
                        Stretch="Fill"/>

        </Border.Background>
        <Border CornerRadius="6"
                BorderThickness="6"
                Opacity="1">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="0.75"/>
                    <GradientStop Color="DarkGray" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Cyan" Offset="0"/>
                    <GradientStop Color="DarkBlue" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Panel de botones de navegación -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,0,10" Width="165"/>

                <!-- Contenido de la vista -->


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="    SISTEMA     "
                   Foreground="Black"
                   FontSize="22"
                   FontFamily="Tahoma"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="30,0,0,0" FontWeight="Bold"/>

                    <Button x:Name="btnMinimizar"
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="20"
                    FontFamily="Tahoma"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimizar_Click" RenderTransformOrigin="-0.426,0.604">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Cyan"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkCyan"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="40" Height="18"
                CornerRadius="9"
                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Monserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnCerrar_Click" Height="30" VerticalAlignment="Top">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="OrangeRed"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="40" Height="18"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Button
                        x:Name="btnVentas"
                        Click="btnVentas_Click"
                        Content="VENTAS" 
                        Margin="15,48,639,332" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Background="#FFF7F7F7" 
                        BorderBrush="Black" Grid.Row="1" FontFamily="Monserrat"/>
                <Button 
                        x:Name="btnCompras"
                        Click="btnCompras_Click"
                        Content="COMPRAS" 
                        Margin="15,97,639,283" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Background="#FFF7F7F7" 
                        BorderBrush="Black" Grid.Row="1" FontFamily="Monserrat"/>
                <Button 
                        x:Name="btnProveedores"
                        Click="btrnProveedores_Click"
                        Content="PROVEEDORES"
                        Margin="15,148,639,232" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Background="#FFF7F7F7" 
                        BorderBrush="Black" Grid.Row="1" FontFamily="Monserrat"/>
                <Button 
                        x:Name="btnReportes"
                        Click="btnReportes_Click"
                        Content="REPORTES" 
                        Margin="15,204,639,176" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Background="#FFF7F7F7" 
                        BorderBrush="Black" RenderTransformOrigin="2.595,-7.903" Grid.Row="1" FontFamily="Monserrat"/>
                <Button 
                        x:Name="btnUsuario" 
                        Click="btnUsuario_Click"
                        Content="USUARIO" 
                        Margin="15,258,639,122" 
                        FontSize="18" 
                        FontWeight="Bold" 
                        Foreground="Black" 
                        Background="#FFF7F7F7" 
                        BorderBrush="Black" Grid.Row="1" FontFamily="Monserrat"/>
                <Label x:Name="lbUsuario" Content="Usuario:" HorizontalAlignment="Left" Margin="10,334,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Content="Label" HorizontalAlignment="Left" Margin="104,450,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <StackPanel x:Name="panelPrincipal" Grid.Row="1" Margin="175,10,0,0">
                    <Frame x:Name="frameVenta"  Height="380" Width="580"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
