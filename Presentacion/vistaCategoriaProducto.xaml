<UserControl x:Class="Presentacion.vistaCategoriaProducto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="850">
    <Grid>
        <StackPanel Margin="0,0,584,60">
            <Label Content="Categoria Producto" Width="207" Height="41" Margin="5,40,0,0" FontFamily="Century Gothic" FontSize="20"/>
            <Label Content="Descripción:" Margin="0,20,0,0" HorizontalAlignment="Left" FontSize="20" FontFamily="Century Gothic"/>
            <TextBox x:Name="lbDescripcionCategoria" TextWrapping="Wrap" Text="TextBox" Width="238" Margin="0,5,0,0" Height="27" HorizontalAlignment="Left" Background="White"/>
            <StackPanel Height="188" Margin="0,10,0,0">
                <Button x:Name="btnGuardarCategoria" Content="Guardar" Click="Button_Click" Margin="0,20,0,0" Width="120" FontFamily="Century Gothic" Background="#FF28840C" Height="30" FontSize="18"/>
                <Button x:Name="btnLimpiar" Content="Limpiar" Margin="0,30,0,0" Width="120" FontFamily="Century Gothic" Background="#FF351CE9" Height="30" FontSize="18"/>
                <Button x:Name="btnBorrarCategoria" Content="Eliminar" Margin="0,30,0,0" Width="120" FontFamily="Century Gothic" Background="Red" Height="30" FontSize="18"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="266,0,48,60">
            <StackPanel Height="80">
                <Label Content="Lista Categoria" Margin="0,40,0,0" FontFamily="Century Gothic" FontSize="20" Width="191" Padding="5,5,5,5" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Height="102" Width="233" HorizontalAlignment="Left">
                <Label Content="Buscar:" FontFamily="Century Gothic" Width="388"/>
                <TextBox x:Name="lbBuscarCategoria" TextWrapping="Wrap" Text="TextBox" Width="120" HorizontalAlignment="Left"/>
                <Button x:Name="btnBuscarCategoria" Content="Buscar" HorizontalAlignment="Left" Width="60" Height="20" Margin="20,5,0,0"/>
                <Button x:Name="btnBorrarCategoriaExistente" Content="Borrar" Width="60" HorizontalAlignment="Left" Height="20" Margin="20,5,0,0"/>
            </StackPanel>
            <DataGrid x:Name="gridCategoriaProducto" AutoGenerateColumns="False" Width="532" Height="178">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Descripción" Width="100" />
                </DataGrid.Columns> Width="100
"
            </DataGrid>

        </StackPanel>

    </Grid>
</UserControl>
