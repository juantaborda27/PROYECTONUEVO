<UserControl x:Class="Presentacion.ReportesVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion"
             mc:Ignorable="d" Height="448" Width="836">
    <Grid>

        <!--Buscar-->
        <StackPanel Margin="66,10,78,363" Orientation="Horizontal" Background="Gray">
            <StackPanel.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="2,2,745,71"/>
            </StackPanel.Clip>

            <Label Width="111" Content="Fecha Inicial" FontSize="16" Foreground="White" FontFamily="Century Gothic" Height="32" FontWeight="Bold" Margin="5,0,0,0" />

            <!--Inicial Fecha -->
            <Button x:Name="btnSelectInitialDate" Width="40" Height="40" Click="btnSelectInitialDate_Click" Margin="10,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Fill="#FF565656"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <Button.Content>
                    <Image Source="IMAGEN/calendario.png" Width="20" Height="20"/>
                </Button.Content>
            </Button>
            <DatePicker x:Name="datePickerInitial" SelectedDateFormat="Short" Visibility="Collapsed" />

            <Label Width="101" Content="Fecha Final" FontSize="16" Foreground="White" FontFamily="Century Gothic" Height="32" FontWeight="Bold" Margin="5,0,0,0" />

            <!-- Final Fecha -->
            <Button x:Name="btnSelectFinalDate" Width="40" Height="40" Click="btnSelectFinalDate_Click" Margin="10,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Fill="#FF565656"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <Button.Content>
                    <Image Source="IMAGEN/calendario.png" Width="25" Height="24"/>
                </Button.Content>
            </Button>
            <DatePicker x:Name="datePickerFinal" SelectedDateFormat="Short" Visibility="Collapsed" />

            <Label Width="84" Content="ID Buscar" FontSize="16" Foreground="White" FontFamily="Century Gothic" Height="32" FontWeight="Bold" Margin="5,0,0,0" />
            <TextBox x:Name="idBuscarRventa" Width="80" Height="34"  TextAlignment="Center" FontFamily="Century Gothic" FontSize="16" Foreground="Black" Margin="0,0,0,5.3">
                <TextBox.Clip>
                    <RectangleGeometry RadiusX="15" RadiusY="15" Rect="1,2,77,30"/>
                </TextBox.Clip>
            </TextBox>
            <Border CornerRadius="15" Background="White" Height="31" Width="46" Margin="0,0,4,5" HorizontalAlignment="Center">
                <Button x:Name="BtnBuscarReporteVent" Content="🔍" BorderBrush="Transparent" Height="31" Background="Transparent" FontFamily="Century Gothic" Click="BtnBuscarVenta_Click" Margin="0,0,0,5" />
            </Border>
        </StackPanel>

        <!--Detalles opciones-->
        <StackPanel Margin="653,10,39,330" Background="Gray">
            <StackPanel.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="5,2,130,101"/>
            </StackPanel.Clip>
            <Border Width="94" Background="Transparent" CornerRadius="10" Height="48" Margin="0,10,0,0">
                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="1,1,90,27"/>
                </Border.Clip>
                <Button x:Name="btnDetalles" Click="BtnDetalle_Click" Content="DETALLES" FontFamily="Century Gothic" FontSize="14" BorderBrush="Transparent" Foreground="White" Background="#FF565656" Margin="0,0,0,18"/>
            </Border>
            <Border Width="94" Background="Transparent" CornerRadius="10" Height="48" Margin="0,10,0,0">
                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="1,1,90,27"/>
                </Border.Clip>
                <Button x:Name="btnEliminar" Click="BtnEliminar_Click" Content="ELIMINAR" FontFamily="Century Gothic" FontSize="14" BorderBrush="Transparent" Foreground="White" Background="#FFFF002F" Margin="0,0,0,18" HorizontalAlignment="Right" Width="94"/>
            </Border>
        </StackPanel>

        <!--Tabla-->
        <StackPanel Margin="119,106,147,10" Background="#FF242A82">
            <StackPanel.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="4,2,519,321"/>
            </StackPanel.Clip>
            <DataGrid x:Name="tbVenta" AutoGenerateColumns="False" SelectionMode="Single" ItemsSource="{Binding}" Height="325" Width="567" HorizontalAlignment="Center">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FF808080"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontFamily" Value="Century Gothic"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID VENTA" Width="100" Binding="{Binding idVenta}"/>
                    <DataGridTextColumn Header="FECHA" Width="150" Binding="{Binding FechaVenta}"/>
                    <DataGridTextColumn Header="CLIENTE" Width="150" Binding="{Binding nombreCliente}"/>
                    <DataGridTextColumn Header="TOTAL" Width="130" Binding="{Binding montoTotal}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</UserControl>
